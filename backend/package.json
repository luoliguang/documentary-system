{
  "name": "fangdu-backend",
  "version": "1.0.0",
  "description": "跟单系统后端API",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migration:generate": "typeorm migration:generate src/migration/FullSnapshot -d src/data-source.ts",
    "migration:run": "tsx node_modules/typeorm/cli.js migration:run -d src/data-source.ts",
    "migration:run:fake": "typeorm migration:run --fake -d src/data-source.ts",
    "test": "jest",
    "test:critical": "jest --runInBand __tests__/functional",
    "test:all": "jest"
  },
  "dependencies": {
    "@socket.io/redis-emitter": "^5.1.0",
    "ali-oss": "^6.23.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.11.3",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.20",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^11.1.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.25",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
