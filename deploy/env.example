# ============================================
# 跟单系统环境变量配置示例
# 复制此文件为 .env 并填入实际值
# ============================================

# 应用配置
NODE_ENV=production
PORT=3006

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# CORS 配置（前端域名）
CORS_ORIGIN=https://your-domain.com

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fangdu_db
DB_USER=fangdu_user
DB_PASSWORD=Fangdu@2024!Secure

# 阿里云 OSS 配置（图片存储）
OSS_REGION=oss-cn-guangzhou
OSS_ACCESS_KEY_ID=your-oss-access-key-id
OSS_ACCESS_KEY_SECRET=your-oss-access-key-secret
OSS_BUCKET=fangdu-order-image
OSS_ENDPOINT=
OSS_BUCKET_URL=
OSS_SECURE=true
OSS_ACL=private
OSS_USE_PUBLIC_URL=false

