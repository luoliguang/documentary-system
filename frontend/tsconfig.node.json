{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "lib": ["ES2020"],
    "target": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["vite.config.ts"]
}

